<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@color/darknewbgsec"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ordinal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:text="0"
            android:textColor="@color/colorVeil"
            android:textSize="16dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_semibold"
            android:gravity="start"
            android:text="Challengers SEA ID : WEEK 4"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/teamAiv"
            app:layout_constraintTop_toTopOf="@+id/teamAiv" />


        <ImageView
            android:id="@+id/teamAiv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:padding="8dp"
            android:src="@drawable/valorant_masters_lightmode"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ordinal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/teamAname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/merriweathersans_regular"
            android:gravity="start"
            android:text="ARF TEAM"
            android:textColor="@color/md_teal_A700"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/teamAiv"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>