<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="3dp"
    android:layout_height="220dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:id="@+id/banneriv"
        android:src="@drawable/valorant_masters_lightmode"
        app:layout_constraintBottom_toTopOf="@+id/otherview"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/darknewbg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </ImageView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/otherview"
        style="@style/CustomCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/md_blue_grey_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp"
                android:fontFamily="@font/merriweathersans_semibold"
                android:gravity="start|center"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:text="VCT EMEA partners with COUGAR as an Official Game Chair Supplier for 2023 and 2024"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/datee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/merriweathersans_regular"
                android:gravity="start"
                android:text="03/30 17:23:46:"
                android:layout_marginVertical="8dp"
                android:textColor="@color/md_brown_100"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>