<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darknewbg"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/column_name"
        android:layout_width="wrap_content"
        android:text="Finals"
        android:textSize="12dp"
        android:fontFamily="@font/merriweathersans_light"
        android:textColor="#00BFA5"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_score_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/column_name"
        android:layout_marginLeft="10dp"
        tools:listitem="@layout/layout_cell_brackets"
        android:layout_marginTop="0dp"
        android:layout_marginRight="120dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/no_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
